// Project tasks configuration. See https://zed.dev/docs/tasks for documentation.

[
  {
    "label": "JETLS: Run test file (TestRunner.jl)",
    "command": "testrunner",
    "args": [
      "--project=./test",
      "--verbose",
      "$ZED_FILE"
    ]
  },
  {
    "label": "JETLS: Run @testset (TestRunner.jl)",
    "command": "testrunner",
    "args": [
      "--project=./test",
      "--verbose",
      "$ZED_FILE",
      "$ZED_CUSTOM_JULIA_TESTSET_NAME",
      "--filter-lines=$ZED_ROW"
    ],
    "tags": ["julia-testset"]
  },
  {
    "label": "JETLS: Run @test case (TestRunner.jl)",
    "command": "testrunner",
    "args": [
      "--project=./test",
      "$ZED_FILE",
      "\":($ZED_CUSTOM_JULIA_TEST_EXPR)\"",
      "--filter-lines=$ZED_ROW"
    ],
    "tags": ["julia-test"]
  },
  {
    "label": "JETLS: Run [TESTRUNNER] expression (TestRunner.jl)",
    "command": "testrunner",
    "args": [
      "--project=./test",
      "$ZED_FILE",
      "\":($ZED_CUSTOM_JULIA_TESTRUNNER_EXPR)\"",
      "--filter-lines=$ZED_ROW"
    ],
    "tags": ["julia-testrunner"]
  }
]
